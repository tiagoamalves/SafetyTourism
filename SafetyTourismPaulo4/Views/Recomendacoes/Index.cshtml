@model IEnumerable<SafetyTourism.Models.Recomendacoe>

@{
    ViewData["Title"] = "Index";
}

<h1>Recomendações OMS</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataRegisto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relatorio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataRegisto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Relatorio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecomendacoeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecomendacoeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecomendacoeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
