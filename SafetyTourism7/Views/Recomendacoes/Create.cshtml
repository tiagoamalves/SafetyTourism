@model SafetyTourism.Models.Recomendacoe

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Recomendacoe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataRegisto" class="control-label"></label>
                <input asp-for="DataRegisto" class="form-control" />
                <span asp-validation-for="DataRegisto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescricaoBreve" class="control-label"></label>
                <input asp-for="DescricaoBreve" class="form-control" />
                <span asp-validation-for="DescricaoBreve" class="text-danger"></span>
            </div>


            <!--DescricaoBreve As TextAreaFor MVC Row3 model.DescricaoBreve-->
            <a>Insira o Relatório da OMS</a>
            @Html.TextAreaFor(model => model.Relatorio, new { @class = "form-control", @rows = 4 })
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
